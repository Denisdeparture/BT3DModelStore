@model ProductViewModel
@*
    This view is test
*@
@{
    <link rel="stylesheet" href="~/css/ControlPage.css" type="text/css" />
     <div class="main">
            <div class="cont">
                <h1>Добавление продукта</h1>
            <form method="post" asp-action="AddProduct" asp-controller="Admin" enctype="multipart/form-data">
                    <label for="Name">Введите название </label>
                    <input id="Name" type="text" asp-for="Name" />
                    <label for="Des">Добавьте описание</label>
                    <input id="Des" type="text" asp-for="Description" />
                    <label for="Col">Введите количество </label>
                    <input id="Col" type="number" asp-for="Quantity" />
                    <label for="Price">Введите цену </label>
                    <input id="Price" type="number" asp-for="Price" />
                    <label for="Model">Добавьте модель в формате gltf</label>
                     <input id="Model" type="file" accept=".glb" asp-for="Model" />
                    <button type="submit">Принять</button>
                </form>
            </div>
     </div>
}
